let studentMarks = [80, 82, 45, 82, 70];

let maximumMarks = 0;

for (let i = 0; i < studentMarks.length; {
    if (studentMarks[i] > maximumMarks) {
                maximumMarks = studentMarks[i];
    }
}
console.log(maximumMarks)

